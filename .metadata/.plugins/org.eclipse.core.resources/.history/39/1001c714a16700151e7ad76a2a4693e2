package ie.wit.assignment.collectors;

import ie.wit.assignment.collectables.Collectable;
import ie.wit.assignment.collectables.Manager;

public abstract class Collector 
{
	protected Collectable[] list;
	protected int total;
	
	public Collector(){
		list = new Collectable[10];
		total = 0;
	}
	public Collector(int sizeIn, int type)
	{
		total = 0;
		switch(type){
		case 1:
			list = new Manager[sizeIn];
			break;
		}
	}
	protected boolean isFull()
	{
		if(total == list.length){
			return true;
		}
		return false;
	}
	protected boolean isEmpty()
	{
		if(total == 0){
			return true;
		}
		return false;
	}
	protected int search(String idIn)
	{
		if(!isEmpty()){
			for(int i = 0; i < total; i++){
				if(list[i].getId().equals(idIn)){
					return i;
				}
			}
			return -888;	//Not found
		}
		return -999;	//Empty
	}
	public boolean add(Collectable objIn)
	{
		if(!isFull()){
			list[total] = objIn;
			return true;
		}
		return false;
	}
}
